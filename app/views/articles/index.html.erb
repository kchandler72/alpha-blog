<h1>Article Index</h1>
<p>
  <%= link_to "Create New Article", new_article_path %> | <%= link_to "Home Page", root_path %>
</p>

<table>
 <tr>
   <th>Title</th>
   <th>Description</th>
 </tr>   
 
 <% @articles.each do |a| %>
   <tr>
     <td><%= a.title %></td>
     <td><%= a.description %></td>
     <td><%= link_to 'Edit', edit_article_path(a) %></td>
     <td><%= link_to "View Article", article_path(a) %></td>
     <td><%= link_to "Delete", article_path(a), method: :delete, data: {confirm: "Are you sure?"} %></td>
   </tr>
 <% end %>
</table>

